{
  "name": "webpack-boilerplate",
  "version": "0.1.0",
  "description": "Boilerplate for HTML, SASS, and ES6 Webpack Projects",
  "main": "src/index.js",
  "scripts": {
    "lint": "jshint ./src/index.js --show-non-errors",
    "test": "npm run lint",
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "start:dev": "webpack-dev-server --mode development",
    "start:prod": "webpack-dev-server --silent --mode production",
    "start": "npm run start:prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benmcnulty/webpack-boilerplate.git"
  },
  "keywords": [
    "webpack",
    "html",
    "sass",
    "css",
    "es6",
    "javascript"
  ],
  "author": "Ben McNulty",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/benmcnulty/webpack-boilerplate/issues"
  },
  "homepage": "https://github.com/benmcnulty/webpack-boilerplate#readme",
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.4.0",
    "html-webpack-plugin": "^3.2.0",
    "jshint": "^2.11.0-rc1",
    "mini-css-extract-plugin": "^0.9.0",
    "sass": "^1.24.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.1.1",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  }
}
